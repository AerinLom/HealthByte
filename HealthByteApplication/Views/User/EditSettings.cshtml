@model UserProfile

<h2>Edit Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <p style="color: green;">@TempData["SuccessMessage"]</p>
}
@if (TempData["ErrorMessage"] != null)
{
    <p style="color: red;">@TempData["ErrorMessage"]</p>
}

<form asp-action="EditSettings" method="post">
    <label>Username</label>
    <input asp-for="Username" />

    <label>Date of Birth</label>
    <input asp-for="DateofBirth" type="date" />

    <label>Gender</label>
    <input asp-for="Gender" />

    <label>Weight (kg)</label>
    <input asp-for="Weight" type="number" step="0.1" />

    <label>Height (cm)</label>
    <input asp-for="Height" type="number" step="0.1" />

    <button type="submit">Save Changes</button>
</form>
