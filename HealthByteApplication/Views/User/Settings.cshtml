@model UserProfile

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>

    <!-- Importing Montserrat font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link href="~/css/dashstyle.css" rel="stylesheet" />
</head>

<body>


    <div id="sidebar" class="sidebar">
        <span class="closebtn" onclick="closeSidebar()">×</span>
        <a href="@Url.Action("Dashboard", "Home")">Dashboard</a>
        <a href="#">Saved Meal Plans</a>
        <a href="#">Recipes</a>
        <a href="#">Shopping Lists</a>
    </div>




    <div class="main-content">
        <button class="toggle-sidebar" onclick="openSidebar()">☰</button>

        <h2>Account Settings</h2>

        <!-- User Information Display -->
        <div class="user-info">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Date of Birth:</strong> @Model.DateofBirth?.ToString("yyyy-MM-dd")</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Weight:</strong> @Model.Weight kg</p>
            <p><strong>Height:</strong> @Model.Height cm</p>
        </div>

        <!-- Button to Show Edit Form -->
        <button id="editBtn" onclick="showEditForm()">Edit Profile</button>

        <!-- Edit Form (Initially Hidden) -->
        <form asp-controller="User" asp-action="EditSettings" method="post" id="editForm" style="display: none;">
            <label>Date of Birth:</label>
            <input asp-for="DateofBirth" type="date" />

            <label>Gender:</label>
            <input asp-for="Gender" />

            <label>Weight (kg):</label>
            <input asp-for="Weight" type="number" step="0.1" />

            <label>Height (cm):</label>
            <input asp-for="Height" type="number" step="0.1" />

            <button type="submit">Save Changes</button>
        </form>

        <script>
            function showEditForm() {
                document.getElementById("editForm").style.display = "block";
                document.getElementById("editBtn").style.display = "none";
            }
        </script>
        <script src="~/js/dashboardscripts.js"> </script>
</body>

</html>
